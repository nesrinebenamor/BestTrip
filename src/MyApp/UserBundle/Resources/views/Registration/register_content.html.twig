{% trans_default_domain 'MyAppUserBundle' %}
<h3><strong><center>Formulaire d'inscription</center></strong></h3>
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register"  enctype="multipart/form-data">
    <div class="input-group">
     <span class="input-group" ><i class="fa fa-user" ></i></span>
   {{ form_widget(form.nom , {'attr':{'class': 'form-control','placeholder':'Nom'}}) }}
   {{ form_errors(form.nom) }}
    </div>
    <div class="input-group">
     <span class="input-group" ><i class="fa fa-user" ></i></span>
   {{ form_widget(form.prenom , {'attr':{'class': 'form-control','placeholder':'Prenom'}}) }}
   {{ form_errors(form.prenom) }}
    </div>
    <div class="input-group">
     <span class="input-group" ><i class="fa fa-user" ></i></span>
   {{ form_widget(form.age , {'attr':{'class': 'form-control','placeholder':'Age','type':'integer'}}) }}
   {{ form_errors(form.age) }}
    </div>
    <div class="input-group">
     <span class="input-group" ><i class="fa fa-envelope" ></i></span>
   {{ form_widget(form.email , {'attr':{'class': 'form-control','placeholder':'Adresse mail','type':'email'}}) }}
   {{ form_errors(form.email) }}
    </div>
    <div class="input-group">
     <span class="input-group" ><i class="fa fa-users" ></i></span>
   {{ form_widget(form.username , {'attr':{'class': 'form-control','placeholder':'Nom d utilisateur'}}) }}
   {{ form_errors(form.username) }}
    </div>
    <div class="input-group">
     <span class="input-group" ><i class="fa fa-lock" ></i></span>
   {{ form_widget(form.plainPassword.first , {'attr':{'class': 'form-control','placeholder':'Mot de passe'}}) }}
   {{ form_errors(form.plainPassword.first) }}
    </div>
    <div class="input-group">
     <span class="input-group" ><i class="fa fa-repeat" ></i></span>
   {{ form_widget(form.plainPassword.second , {'attr':{'class': 'form-control','placeholder':'Répéter mot de passe'}}) }}
    {{ form_errors(form.plainPassword.second) }}
    </div>
    <br>
     <div class="input-group">
     <span ><i class="fa fa-file-image" ></i></span>
    {{ form_widget(form.file , {'attr':{'class': 'form-control','placeholder':'choisissez votre photo'}}) }}
    {{ form_errors(form.file) }}
    </div>
    <br>
    <div><input type="submit" value="Enregistrer" class="btn btn-action"/></div>
    {{form_rest(form)}}
</form>

