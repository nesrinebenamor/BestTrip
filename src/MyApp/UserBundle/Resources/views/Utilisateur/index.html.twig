{% extends 'MyApp\UserBundle::layoutBack.html.twig' %}
{% block contenu %}

{% block body -%}
    
    <h2 class="indent-left margin-bot">Utilisateur list</h2>

    <table class="records_list" border="3">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Login</th>
                <th>Age</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('utilisateur_show', { 'id': entity.id }) }}">{{ entity.nom }}</a></td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.image }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('utilisateur_show_admin', { 'id': entity.id }) }}">Voir de prés</a>
                    </li>
                    <li>
                        <a href="{{ path('utilisateur_delete_admin1', { 'id': entity.id }) }}">Supprimer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('utilisateur_new') }}">
                Créer un nouvel utilisateur
            </a>
        </li>
    </ul>
    {% endblock %}
 {% endblock %}