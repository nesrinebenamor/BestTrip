
{% extends "MyAppFrontBundle::layout.html.twig" %}
{% block content %}
    <form class="form-light mt-20" method="POST">

        <div class="form-group">
            <label>Titre</label>
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            <label>Description</label>
            {{form_widget(form.contenu, {'attr': {'class': 'form-control'}})}}
        </div>

        <div class="form-group">
            <label>Climat</label>
            {{form_widget(form.climat, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="form-group">
            <label>Type</label>
            {{form_widget(form.type, {'attr': {'class': 'form-control'}})}}
        </div>

        <div class="form-group">
            <label>Pays</label>
            {{form_widget(form.pays, {'attr': {'class': 'form-control'}})}}
        </div>
        <div class="form-group">
            <label>Dépense</label>
            {{form_widget(form.depense, {'attr': {'class': 'form-control'}})}}

        </div>

        <button type="submit" class="btn btn-two">Envoyer Expérience</button>
        <a href="{{path('photo_create')}}">Ajout photo</a>
        {{form_rest(form)}}
    </form>
{% endblock %}