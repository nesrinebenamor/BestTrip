{% extends 'MyApp\UserBundle::layout.html.twig' %}

{% block body %}
     {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<h3><strong><center>Ajouter une nouvelle recommandation</center></strong></h3>
<form action="{{ path('ajout_recommandation') }}" {{ form_enctype(form) }} method="POST"  enctype="multipart/form-data">
    <div class="input-group">
   {{ form_widget(form.nom , {'attr':{'class': 'form-control','placeholder':'Nom'}}) }}
   {{ form_errors(form.nom) }}
    </div>
    <div class="input-group">
   {{ form_widget(form.adresse , {'attr':{'class': 'form-control','placeholder':'Adresse'}}) }}
   {{ form_errors(form.adresse) }}
    </div>
    <div class="input-group">
   {{ form_widget(form.contenu , {'attr':{'class': 'form-control','placeholder':'Contenu'}}) }}
   {{ form_errors(form.contenu) }}
    </div>
     <div class="input-group">
   {{ form_widget(form.estCompagnie , {'attr':{'class': 'form-control'}}) }}
   {{ form_errors(form.estCompagnie) }}
    </div>
    <br>
    <div><input type="submit" value="Enregistrer" class="btn btn-action"/></div>
    {{form_rest(form)}}
</form>
{% else %}
        <meta http-equiv="refresh" content="0; url=http://localhost/ProjetBestTrip/web/app_dev.php/login" />
{% endif %}
{% endblock %}